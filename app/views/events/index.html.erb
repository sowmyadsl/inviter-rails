
<div class="well">
   <% @events.each do |event| %>

    <h3><%= link_to event.name, event_path(event) %></h3>
    <h3><%= event.description%></h3>
    <h4><%= event.date %></h4>

    <p><%= link_to "Edit", edit_event_path(event) %></p>
    <p><%= link_to "Delete", event_path(event),
    :data => {:confirm => "You sure?",
     :method => "delete"} %></p>
    <%= link_to 'Add Attendees', new_event_attendee_path(event) %>
    <% event.attendees.each do |attendee| %>
    <br>
    <%= attendee.name %> |
    <%= attendee.email_address %>
   <% end %>
   <hr>
   <% end %>

</div>
