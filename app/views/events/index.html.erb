
   <% current_user.events.each do |event| %>
   <div class="well">
    <h3><%= link_to event.name, event_path(event) %></h3>
    <h3><%= event.description%></h3>
    <h4><%= event.date %></h4>

    <button class="btn btn-info"><%= link_to "Edit", edit_event_path(event) %></button>
    <button class="btn btn-info"><%= link_to "Delete", event_path(event),
    :data => {:confirm => "You sure?",
     :method => "delete"} %></button>
     <br>
     <br>
     <%= link_to  new_event_attendee_path(event), class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-plus"></i> Add Attendees
     <% end %>

    <% event.attendees.each do |attendee| %>
    <br>
    <%= attendee.name %> |
    <%= attendee.email_address %>
   <% end %>

   <% end %>
</div>
