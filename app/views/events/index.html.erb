
<% current_user.events.each do |event| %>
<div class="well">
  <h3><%= link_to event.name, event_path(event) %></h3>
  <h3><%= event.description%></h3>
  <h4><%= event.date %></h4>

  <button class="btn btn-info"><%= link_to "Edit", edit_event_path(event) %></button>
  <button class="btn btn-info"><%= link_to "Delete", event_path(event),
  :data => {:confirm => "You sure?",
    :method => "delete"} %></button>
    <br>
      <h3> Attendees </h3>
      <div class="card">
      <table style="width:75%">
        <tr>
          <th></th>
          <th></th>
          <th>Name</th>
          <th>Email Address</th>
        </tr>
        <% event.attendees.each do |attendee| %>
        <tr>
          <td>
            <%= link_to "", event_attendee_path(event,attendee), :method => "delete", class: "glyphicon glyphicon-remove", remote: true %>
            <!-- <i id="remove" class="glyphicon glyphicon-remove"></i> -->
          </td>
          <td>
            <%= link_to "", edit_event_attendee_path(event,attendee), class: "glyphicon glyphicon-pencil" %>
          </td>
          <td><%= attendee.name %></td>
          <td><%= attendee.email_address %></td>
        </tr>
        <% end %>
        <tr>
          <td></td>
          <td></td>
          <td>
            <%= link_to  new_event_attendee_path(event), id: "new_attendee", remote: true do %><i class="glyphicon glyphicon-plus"></i><% end %>
          </td>
          <td></td>
        </tr>
      </table>
    </div>
    <br>
    <button class="btn btn-info"><%= link_to "Send Invites", send_invites_path(event) %></button>
    <% end %>
  </div>
